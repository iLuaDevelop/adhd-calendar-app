{
  "name": "adhd-calendar-app",
  "version": "1.0.0",
  "description": "A modern and clean calendar application designed for individuals with ADHD.",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev-electron": "set ELECTRON_START_URL=http://localhost:3000 && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "build-electron": "vite build && electron-builder",
    "serve": "vite preview",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "firebase": "^12.7.0",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.3.2",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.27.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.4",
    "vite": "^2.6.4",
    "wait-on": "^9.0.3"
  },
  "keywords": [
    "calendar",
    "adhd",
    "productivity",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.adhd-calendar-app.app",
    "productName": "ADHD Calendar",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

{
  "name": "adhd-calendar-app",
  "version": "1.0.3",
  "description": "A modern and clean calendar application designed for individuals with ADHD.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev-electron": "set ELECTRON_START_URL=http://localhost:3000 && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "build-preload": "esbuild electron/preload.ts --bundle --outfile=./preload.js --platform=node --format=cjs --external:electron",
    "build-main": "esbuild electron/main.ts --bundle --outfile=./main.js --platform=node --format=cjs --external:electron",
    "build-electron": "npm run build-preload && npm run build-main && vite build && electron-builder --dir --win",
    "build-electron-release": "npm run build-preload && npm run build-main && set CSC_IDENTITY_AUTO_DISCOVERY=false && vite build && electron-builder --win",
    "serve": "vite preview",
    "dist": "npm run build-preload && npm run build-main && set CSC_IDENTITY_AUTO_DISCOVERY=false && vite build && electron-builder --win",
    "backup-db": "node export-database.js",
    "restore-db": "node restore-database.js"
  },
  "dependencies": {
    "@paypal/paypal-js": "^9.1.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@vercel/node": "^5.5.16",
    "autoprefixer": "^10.4.2",
    "dotenv": "^17.2.3",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "stripe": "^20.1.0",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^1.3.2",
    "concurrently": "^9.2.1",
    "electron": "^13.6.9",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.27.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.4",
    "vite": "^2.6.4",
    "wait-on": "^9.0.3"
  },
  "keywords": [
    "calendar",
    "adhd",
    "productivity",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.adhd-calendar-app.app",
    "productName": "ADHD Calendar",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      ".env.local",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,LICENSE,license,LICENSEs,AUTHORS,HISTORY,History.md}",
      "!**/*.d.ts"
    ],
    "extraMetadata": {
      "name": "adhd-calendar-app"
    },
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ADHD Calendar",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "allowElevation": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
